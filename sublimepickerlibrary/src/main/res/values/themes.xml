<resources>

    <!-- Dark theme -->
    <style name="SublimePickerStyleDark" parent="Theme.AppCompat">
        <item name="spDatePickerStyle">@style/SublimeDatePickerStyle</item>
        <item name="spTimePickerStyle">@style/SublimeTimePickerStyle</item>
        <item name="spRecurrencePickerStyle">@style/SublimeRecurrencePickerStyle</item>
        <item name="spRecurrenceOptionCreatorStyle">@style/RecurrenceOptionCreatorStyle</item>
        <item name="spNumbersBackgroundColor">#10ffffff</item>
        <item name="spCalendarDisabledTextColor">@color/calendar_disabled_text_color_dark</item>
        <item name="spButtonLayoutStyle">@style/ButtonLayoutStyle</item>
        <item name="spDayPickerStyle">@style/DayPickerViewStyle</item>
        <item name="spRadialTimePickerStyle">@style/RadialTimePickerViewStyle</item>
        <item name="spOverflowIconColor">?android:attr/textColorPrimary</item>
        <item name="spOverflowIconPressedBgColor">
            @color/overflow_icon_pressed_state_bg_color_light
        </item>
        <!-- Material (API 23) -->
        <item name="spHeaderBackgroundPtr">#ff555555</item>
        <item name="spCalendarDayTextColorPtr">@color/sp_primary_text_dark</item>
        <item name="spPrimaryTextSecondaryWhenActivatedMaterialInversePtr">@color/sp_multi_use_text_dark</item>
        <item name="spNumbersTextColorPtr">@color/sp_text_color_primary_activated_dark</item>
        <item name="spNumbersBackgroundColorPtr">#ff555555</item>
        <item name="spNumbersInnerTextColorPtr">@color/sp_text_color_secondary_activated_dark</item>

        <!-- Button: landscape styles -->
        <item name="spLandscapeOkActionDrawable">@drawable/checkmark_medium_ff</item>
        <item name="spLandscapeCancelActionDrawable">@drawable/cancel_medium_ff</item>
        <item name="spLandscapeButtonModeOkCancelButtonStyle">@style/SButtonBarButtonStyle</item>
        <item name="spLandscapeButtonModeSwitcherButtonStyle">@style/SInvertedButtonBarButtonStyle</item>
    </style>

    <!-- Light theme -->
    <style name="SublimePickerStyleLight" parent="Theme.AppCompat.Light">
        <item name="spDatePickerStyle">@style/SublimeDatePickerStyle</item>
        <item name="spTimePickerStyle">@style/SublimeTimePickerStyle</item>
        <item name="spRecurrencePickerStyle">@style/SublimeRecurrencePickerStyle</item>
        <item name="spRecurrenceOptionCreatorStyle">@style/RecurrenceOptionCreatorStyle</item>
        <item name="spNumbersBackgroundColor">#10000000</item>
        <item name="spCalendarDisabledTextColor">@color/calendar_disabled_text_color_light</item>
        <item name="spButtonLayoutStyle">@style/ButtonLayoutStyle</item>
        <item name="spDayPickerStyle">@style/DayPickerViewStyle</item>
        <item name="spRadialTimePickerStyle">@style/RadialTimePickerViewStyle</item>
        <item name="spOverflowIconColor">?android:attr/textColorPrimaryInverse</item>
        <item name="spOverflowIconPressedBgColor">
            @color/overflow_icon_pressed_state_bg_color_light
        </item>
        <!-- Material (API 23) -->
        <item name="spHeaderBackgroundPtr">?attr/colorAccent</item>
        <item name="spCalendarDayTextColorPtr">@color/sp_primary_text_light</item>
        <item name="spPrimaryTextSecondaryWhenActivatedMaterialInversePtr">@color/sp_multi_use_text_light</item>
        <item name="spNumbersTextColorPtr">@color/sp_text_color_primary_activated_light</item>
        <item name="spNumbersBackgroundColorPtr">#ffdddddd</item>
        <item name="spNumbersInnerTextColorPtr">@color/sp_text_color_secondary_activated_light</item>

        <!-- Button: landscape styles -->
        <item name="spLandscapeOkActionDrawable">@drawable/checkmark_medium_ff</item>
        <item name="spLandscapeCancelActionDrawable">@drawable/cancel_medium_ff</item>
        <item name="spLandscapeButtonModeOkCancelButtonStyle">@style/SButtonBarButtonStyle</item>
        <item name="spLandscapeButtonModeSwitcherButtonStyle">@style/SInvertedButtonBarButtonStyle</item>
    </style>

</resources>